  "dependencies": {
    "@ferdiunal/refine-shadcn": "workspace:*",
    "@hookform/resolvers": "^5.2.1",
    "@refinedev/core": "^4.57.11",
    "@refinedev/react-hook-form": "^4.10.2",
    "better-auth": "^1.3.0",
    "lucide-react": "^0.540.0",
    "react": "^19.0.0",
